mixin articles-block(parameter)
  -
    var
      parameter = parameter || {};

      title = parameter.title || "titile";

      titles = parameter.titles || ["Статья отсутствует", "no article"];
      descriptions = parameter.descriptions ||
        ["Описание отсутствует", "no description"];

  //-

  .articles-block
    .articles-block__wrapper
      +chapter({
        title: title
      })

      .articles-block__content
        -for (var i = 1; i <= titles.length; i++)
          +article({
            title: titles[i - 1],
            description: descriptions[i - 1]
          })

        .articles-block__button
          +button({caption: 'все статьи'})