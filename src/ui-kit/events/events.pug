mixin events(parameter)
  -var parameter = parameter || {};
  -var link = parameter.link || "#";
  -var imageName = parameter.imageName || "news";
  -var imageAlt = parameter.imageAlt || "SEO alt";
  -var imageTitle = parameter.imageTitle || "SEO title";
  -var title = parameter.title || "title";
  -var description = parameter.description || "desc";

  //-

  .events
    a.events__link(href= link)
      img.events__image(
        src="./images/events/" + imageName + ".jpg"
        alt= imageAlt
        title= imageTitle)
      .events__content
        p.events__title= title
        p.events__desc= description