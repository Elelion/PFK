mixin menu(parameter)
  -var parameter = parameter || {};
  -var firstItem = parameter.firstItem || "главная";
  -var secondItem = parameter.secondItem || "каталог";
  -var thirdItem = parameter.thirdItem || "сервис";
  -var fourthItem = parameter.fourthItem || "контакты";

  //-

  .menu
    input#menuBurger.menu-nav__button-checkbox(type="checkbox")
    label.menu-nav__button(for="menuBurger") Меню

    nav.menu-nav
      ul.menu-nav__list
        li.menu-nav__item
          a.menu-nav__link(href="index.html")= firstItem

        li.menu-nav__item
          a.menu-nav__link(href="catalog.html")= secondItem

        li.menu-nav__item
          a.menu-nav__link(href="service.html")= thirdItem

        li.menu-nav__item
          a.menu-nav__link(href="contacts.html")= fourthItem