mixin services-block(parameter)
  -
    var
      parameter = parameter || {};

      titleChapter = parameter.titleChapter || "titile";
      titleType = parameter.titleType || "";

      imagesName = parameter.imagesName || ["imageName", "imageName"];
      imagesAlt = parameter.imagesAlt || ["alt SEO", "alt SEO"];
      imagesTitle = parameter.imagesTitle || ["title SEO", "title SEO"];
      titles = parameter.titles || ["title", "title"];
      linkSheet = parameter.linkSheet || ["#", "#"];

  //-

  .services-block
    .services-block__wrapper
      +chapter({
          title: titleChapter,
          titleType: titleType,
          indent: "true"
        })

      .services-block__content
        -for (var i = 1; i <= titles.length; i++)
          +service({
            link: linkSheet[i - 1],
            imageName: imagesName[i - 1],
            imageAlt: imagesAlt[i - 1],
            imageTitile: imagesTitle[i - 1],
            title: titles[i - 1]
          })