mixin header-block(parameter)
  -
    var
      parameter = parameter || {};

      logoImage = parameter.image || "logo";
      logoAltImage = parameter.altImage || "logo SEO alt";
      logoTitleImage = parameter.titleImage || "logo SEO title";
      logoSlogan = parameter.logoSlogan || "гарантия ";
      logoSloganSpan = parameter.logoSloganSpan || "качества";

      menuTitles = parameter.menuTitles || [
        "главная",
        "каталог",
        "сервис",
        "контакты"
      ];

      menuLinks = parameter.menuLinks || [
        "./index.php",
        "./catalog.php",
        "./service.php",
        "./contacts.php"
      ];

  //-

  .header-block
    .header-block__wrapper
      .header-block__logo
        a.header-block__logo-link(href="index.php")
          +logo({
            image: logoImage,
            altImage: logoAltImage,
            titleImage: logoTitleImage,
            slogan: logoSlogan,
            sloganSpan: logoSloganSpan
          })

      .header-block__menu
        +menu({
          titles: menuTitles,
          links: menuLinks
        })

      .header-block__authorization
        .header-block__authorization-login
          <?php if ($userSession->getAuthorizationStatus() == false) { ?>
            +panel-authorization
          <?php } ?>

          <?php if ($userSession->getAuthorizationStatus() == true && $userSession->getAccess() == 'admin') { ?>
            +panel-admin
          <?php } ?>

          <?php if ($userSession->getAuthorizationStatus() == true && $userSession->getAccess() == 'user') { ?>
            +panel-user
          <?php } ?>
